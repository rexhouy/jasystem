<%= form_for @attribute, html: {role:'form', class:'form-horizontal'} do |f| %>
  <% if @attribute.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@attribute.errors.count, "error") %> prohibited this attribute from being saved:</h2>

      <ul>
        <% @attribute.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :kind, "分类", class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <select name="attribute[category]" class="form-control">
        <option value="类别">类别</option>
        <option value="开向">开向</option>
        <option value="花型">花型</option>
        <option value="门框">门框</option>
        <option value="颜色">颜色</option>
        <option value="锁具">锁具</option>
      </select>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :kind, "类型", class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :kind, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :name, "名称", class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :price, "价格", class: "col-sm-2 control-label" %>
    <div class="col-sm-3">
      <%= f.number_field :price, class: "form-control" %>
    </div>
  </div>

  <div class="form-group actions">
    <div class="col-sm-offset-2">
      <%= f.submit "确定", class: "btn btn-primary" %>
      <%= link_to '取消', attributes_path,  class: "btn btn-default" %>
    </div>
  </div>
<% end %>
