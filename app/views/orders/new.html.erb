<%= form_for @order, method: 'post', html: {role:'form', class:'form-horizontal'} do |order| %>
<fieldset id="customer_info">
	<legend>客户信息</legend>
	<%= order.fields_for :customer do |c| %>
	<div class="form-group">
		<%= c.label :name, '名字', class: 'col-sm-2 control-label' %>
		<div class="col-sm-2">
			<%= c.text_field :name, class: 'form-control', placeholder: '张三', :required => true %>
		</div>
	</div>
	<div class="form-group">
		<%= c.label :address, '地址', class: 'col-sm-2 control-label' %>
		<div class="col-sm-8">
			<%= c.text_field :address, class: 'form-control', placeholder: '麒麟区', :required => true %>
		</div>
	</div>
	<div class="form-group">
		<%= c.label :phone, '电话', class: 'col-sm-2 control-label' %>
		<div class="col-sm-3">
			<%= c.phone_field :phone, class: 'form-control', placeholder: '12345678901', :required => true %>
		</div>
	</div>
	<nav>
		<ul class="pager pull-right">
			<li><a href="#" id="customer_next">下一步</a></li>
		</ul>
	</nav>
	<% end %>
</fieldset>


<fieldset style="display:none;" id="order_info">
	<legend>订单信息
		<a href="#" class="btn btn-primary active pull-right" id="add_bathroom_door" style="position:relative;top:-10px">追加卫生间门</a>
	</legend>
	<%= order.fields_for :doors do |d| %>
	<div>
		<button type="button" class="close" onclick="removeDoor(this)"><span aria-hidden="true">&times;</span></button>
		<div class="form-group">
			<%= d.label :material, '材料', class: 'control-label col-sm-2' %>
			<div class="col-sm-2">
				<%= d.select :material, options_for_select([['0.8', '0.8'], ['1.0', '1.0'], ['1.4', '1.4']], :material),{}, {class: 'form-control'} %>
			</div>
		</div>
		<div class="form-group">
			<%= d.label :size, '规格', class: 'control-label col-sm-2' %>
			<div class="col-sm-2">
				<%= d.number_field :size_y, class: 'form-control', placeholder: 2000, :required => true %>
			</div>
			<div class="col-sm-2">
				<%= d.number_field :size_x, class: 'form-control', placeholder: 900, :required => true %>
			</div>
		</div>
		<div class="form-group">
			<%= d.label :sill, '吊脚', class: 'control-label col-sm-2' %>
			<div class="col-sm-2">
				<%= d.number_field :sill, class: 'form-control', placeholder: 15, :required => true %>
			</div>
		</div>
		<div class="form-group">
			<%= d.label :count, '数量', class: 'control-label col-sm-2' %>
			<div class="col-sm-2">
				<%= d.number_field :count, class: 'form-control', placeholder: 1, :required => true %>
			</div>
		</div>
		<hr>
	</div>
	<% end %>
	<nav>
		<ul class="pager pull-right">
			<li><a href="#" id="order_prev">上一步</a></li>
			<li><a href="#" id="order_next">下一步</a></li>
		</ul>
	</nav>
</fieldset>

<fieldset style="display:none;" id="other_info">
	<legend>其他信息</legend>
	<div class="form-group">
		<%= order.label :order_date, '下单日期', class: 'control-label col-sm-2' %>
		<div class="col-sm-2">
			<%= order.date_field :order_date, class: 'form-control', :required => true %>
		</div>
	</div>
	<div class="form-group">
		<%= order.label :delivery_date, '交货日期', class: 'control-label col-sm-2' %>
		<div class="col-sm-2">
			<%= order.date_field :delivery_date, class: 'form-control', :required => true %>
		</div>
	</div>
	<nav>
		<ul class="pager pull-right">
			<li><a href="#" id="other_prev" style="margin-right: 20px">上一步</a></li>
			<li><%= submit_tag '提交', class: 'btn btn-primary active' %></li>
		</ul>
	</nav>
</fieldset>
<% end %>
