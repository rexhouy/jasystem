<div class="container-small">
<h2>注册新用户</h2>
<div class="card login-card">

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal login-form'}) do |f| %>
    <div class="alert alert-danger" role="alert">
      <%= devise_error_messages! %>
    </div>
      <label class="logo">久安门业</label>
    <div>
      <%= f.email_field :email, autofocus: true, placeholder:"Email" %>
    </div>

    <div>
      <%= f.password_field :password, autocomplete: "off",  placeholder:"密码" %>
    </div>

    <div>
      <%= f.password_field :password_confirmation, autocomplete: "off",  placeholder:"确认密码" %>
    </div>

    <div style="margin-top: 20px;">
      <%= f.submit "提交", class:"btn btn-primary", style: "width:100%;" %>
    </div>

  <% end %>
</div>
<%= render "devise/shared/links" %>
</div>
